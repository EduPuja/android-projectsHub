<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reciclar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="196dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/man"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_weight="1"
                app:srcCompat="@drawable/man" />

            <ImageView
                android:id="@+id/recicle"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_weight="1"
                app:srcCompat="@drawable/reciclar" />

            <ImageView
                android:id="@+id/viatgar"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_weight="1"
                app:srcCompat="@drawable/viajar" />

            <ImageView
                android:id="@+id/interficia"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_weight="1"
                app:srcCompat="@drawable/interficia" />

            <ImageView
                android:id="@+id/restaurant"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_weight="1"
                app:srcCompat="@drawable/restaurant" />

            <ImageView
                android:id="@+id/tienda"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_weight="1"
                app:srcCompat="@drawable/tienda" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>